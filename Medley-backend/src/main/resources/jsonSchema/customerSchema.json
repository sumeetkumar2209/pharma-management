{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supplier",
  "description": "Supplier Json",
  "type": "object",
  "properties": {
    "customerStatus": {
      "description": "Status of Customer",
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "customerName": {
      "description": "Name of the Customer",
      "type": "string",
      "maxLength": 100,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "contactName": {
      "description": "Contact name of Customer",
      "type": "string",
      "maxLength": 100,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "contactNumber": {
      "description": "Contact no of Customer",
      "type": "string",
      "maxLength": 15,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "contactEmail": {
      "description": "Email of Customer",
      "type": "string",
      "maxLength": 50,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "addressLine1": {
      "description": "addressLine1 of Customer",
      "type": "string",
      "maxLength": 50,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "addressLine2": {
      "description": "addressLine2 of Customer",
      "type": ["string", "null"],
      "maxLength": 50,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "addressLine3": {
      "description": "addressLine3 of Customer",
      "type": ["string", "null"],
      "maxLength": 50,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "town": {
      "description": "town of Customer",
      "type": "string",
      "maxLength": 30,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "country": {
      "description": "Country of Customer",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "postalCode": {
      "description": "postalCode of Customer",
      "type": "string",
      "maxLength": 15,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "customerQualificationStatus": {
      "description": "customerQualificationStatus of Customer",
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "currency": {
      "description": "currency of Customer",
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "approver": {
      "description": "approver of Customer",
      "type": "string",
      "maxLength": 50,
      "leadingSpaces": false,
      "trailingSpaces": false
    },
    "comments": {
      "description": "comments of Customer",
      "type": ["string", "null"],
      "maxLength": 300,
      "leadingSpaces": false,
      "trailingSpaces": false
    }
  },
  "required": ["customerStatus","customerName","contactName","contactNumber",
    "contactEmail","addressLine1","town","country","postalCode","customerQualificationStatus",
    "currency","approver"]
}